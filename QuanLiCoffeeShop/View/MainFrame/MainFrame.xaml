<Window x:Class="QuanLiCoffeeShop.View.MainFrame.MainFrame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:QuanLiCoffeeShop.View.MainFrame"
        mc:Ignorable="d" 
        d:DesignHeight="864" d:DesignWidth="1536"
        Title="MainFrame"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="18"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="White"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Window.Resources>
        <Storyboard x:Key="MenuOpen">
            <DoubleAnimationUsingKeyFrames 
                Storyboard.TargetProperty="Width"
                Storyboard.TargetName="MenuBar">
                <EasingDoubleKeyFrame KeyTime="0" Value="0" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="220" />
            </DoubleAnimationUsingKeyFrames>
            <!-- Show the overlay -->
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" Storyboard.TargetName="Overlay">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}" />
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="MenuClose">
            <DoubleAnimationUsingKeyFrames 
                Storyboard.TargetProperty="Width"
                Storyboard.TargetName="MenuBar">
                <EasingDoubleKeyFrame KeyTime="0" Value="220" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <!-- Hide the overlay -->
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" Storyboard.TargetName="Overlay">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Collapsed}" />
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" 
                      SourceName="OpenMenu_btn">
            <BeginStoryboard Storyboard="{StaticResource MenuOpen}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click"  
              SourceName="CloseMenu_btn">
            <BeginStoryboard Storyboard="{StaticResource MenuClose}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <!-- Overlay -->
        <Border x:Name="Overlay" 
                Background="#99CCCCCC" 
                Visibility="Collapsed"
                MouseDown="Overlay_MouseDown">
            <Grid>
                <TextBlock>
                    
                </TextBlock>
            </Grid>
        </Border>

        <!--Frame-->
        <Grid>

            <Grid>
                <materialDesign:ColorZone
                    Mode="PrimaryLight"
                    Padding="13" 
                    Background="#FFF2E9" 
                    Height="53">
                    <StackPanel
                    Orientation="Horizontal">
                        <!--OpenMenu_btn-->
                        <Button
                            x:Name="OpenMenu_btn"
                            Margin="10 0 0 0"
                            Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Content>
                                <Image 
                                    Source="/QuanLiCoffeeShop;component/Resources/Icon/Menu_Icon.png"
                                    Width="27"/>
                            </Button.Content>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{x:Null}" />
                                    <Setter Property="BorderBrush" Value="{x:Null}" />
                                    <Setter Property="Foreground" Value="{x:Null}" />
                                </Style>
                            </Button.Style>
                        </Button>
                        <TextBlock
                            FontSize="20"
                            VerticalAlignment="Center"
                            Margin="13 0 0 0" Foreground="#FFE0AE8A" FontWeight="Bold">
                            Coffee Shop
                        </TextBlock>

                        <!--Admin_btn-->
                        <StackPanel
                            Orientation="Horizontal">
                            <TextBlock
                                 FontSize="20"
                                 VerticalAlignment="Center"
                                 Margin="1170 0 0 0" Foreground="#FFE0AE8A" FontWeight="Bold">                    
                                 Administrator
                            </TextBlock>
                            <materialDesign:PopupBox
                                HorizontalAlignment="Right"
                                Margin="0"
                                PlacementMode="BottomAndAlignRightEdges"
                                StaysOpen="False" 
                                Foreground="#FFE0AE8A">
                                
                                <!--Popup Box-->
                                <materialDesign:PopupBox.ToggleContent>
                                    <Grid Margin="10 0 0 0">
                                        <Image
                                            Source="/QuanLiCoffeeShop;component/Resources/Icon/Admin_Icon.png"                                                        
                                            Width="27"
                                        />
                                    </Grid>
                                </materialDesign:PopupBox.ToggleContent>
                                <StackPanel Width="200">
                                    <Button
                                        Height="50">
                                        <Button.Template>
                                            <ControlTemplate 
                                                TargetType="Button">
                                                <StackPanel 
                                                        Cursor="Hand" 
                                                        Orientation="Horizontal">
                                                    <Image 
                                                            Source="/QuanLiCoffeeShop;component/Resources/Icon/Setting_Icon.png"
                                                            Width="27"
                                                            Margin="24 0 0 0" />
                                                    <TextBlock 
                                                            Text="Tài khoản"
                                                            FontSize="18"
                                                            VerticalAlignment="Center"
                                                            Margin="13,0,0,0"
                                                            Foreground="#E0AE8A" />
                                                </StackPanel>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button
                                        Height="50">
                                        <Button.Template>
                                            <ControlTemplate 
                                                TargetType="Button">
                                                <StackPanel 
                                                        Cursor="Hand" 
                                                        Orientation="Horizontal">
                                                    <Image 
                                                            Source="/QuanLiCoffeeShop;component/Resources/Icon/Help_Icon.png"
                                                            Width="27"
                                                            Margin="24 0 0 0" />
                                                    <TextBlock 
                                                            Text="Trợ giúp"
                                                            FontSize="18"
                                                            VerticalAlignment="Center"
                                                            Margin="13,0,0,0"
                                                            Foreground="#E0AE8A" />
                                                </StackPanel>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Separator></Separator>
                                    <Button
                                        Height="50">
                                        <Button.Template>
                                            <ControlTemplate 
                                                TargetType="Button">
                                                <StackPanel 
                                                        Cursor="Hand" 
                                                        Orientation="Horizontal">
                                                    <Image 
                                                            Source="/QuanLiCoffeeShop;component/Resources/Icon/Logout_Icon.png"
                                                            Width="27"
                                                            Margin="24 0 0 0" />
                                                    <TextBlock 
                                                            Text="Đăng xuất"
                                                            FontSize="18"
                                                            VerticalAlignment="Center"
                                                            Margin="13,0,0,0"
                                                            Foreground="#E0AE8A" />
                                                </StackPanel>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>                                    
                                </StackPanel>
                            </materialDesign:PopupBox>
                        </StackPanel>

                    </StackPanel>

                </materialDesign:ColorZone>
            </Grid>

            <Grid
                x:Name="MenuBar"
                HorizontalAlignment="Left"
                Height="864"
                Background="#FFFFFF" 
                Width="0">
                <StackPanel>
                    <Grid Height="64">
                        <StackPanel
                     Cursor="Hand"
                     HorizontalAlignment="Right"
                     Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock
                        FontSize="20"
                        VerticalAlignment="Center"
                        Margin="0 0 12 0" Foreground="#FFE0AE8A" FontWeight="Bold">
                        Coffee Shop
                            </TextBlock>
                            <!--CloseMenu_btn-->
                            <Button
                                x:Name="CloseMenu_btn"
                                Padding="0"
                                Background="{x:Null}" 
                                BorderBrush="{x:Null}" 
                                Foreground="{x:Null}"
                                Margin="0 0 24 0"
                                >
                                <Image 
                                   Source="/QuanLiCoffeeShop;component/Resources/Icon/BackMenu_Icon.png"
                                   Width="27"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!--SanPham-Menu_btn-->
                    <Button
                        Height="58"
                        Command="{Binding LoadSanPhamPage}" 
                        CommandParameter="{Binding ElementName=MainFrame}">
                        <Button.Template>
                            <ControlTemplate 
                                TargetType="Button">
                                <Border 
                                    Height="58" 
                                    CornerRadius="16" 
                                    Background="#FFE0AE8A">
                                    <StackPanel 
                                        Cursor="Hand" 
                                        Orientation="Horizontal">
                                        <Image 
                                            Source="/QuanLiCoffeeShop;component/Resources/Icon/SanPham_White_Icon.png"
                                            Width="27"
                                            Margin="24 0 0 0" />
                                        <TextBlock 
                                            Text="Sản phẩm"
                                            FontSize="18"
                                            VerticalAlignment="Center"
                                            Margin="13,0,0,0"
                                            Foreground="White" />
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!--NhanVien-Menu_btn-->
                    <Button
                        Height="58"
                        Command="{Binding LoadNhanVienPage}" 
                        CommandParameter="{Binding ElementName=MainFrame}">
                        <Button.Template>
                            <ControlTemplate 
                                TargetType="Button">
                                <Border 
                                    Height="58" 
                                    CornerRadius="16">
                                    <StackPanel 
                                        Cursor="Hand" 
                                        Orientation="Horizontal">
                                        <Image 
                                            Source="/QuanLiCoffeeShop;component/Resources/Icon/NhanVien_Brown_Icon.png"
                                            Width="27"
                                            Margin="24 0 0 0" />
                                        <TextBlock 
                                            Text="Nhân viên"
                                            FontSize="18"
                                            VerticalAlignment="Center"
                                            Margin="13,0,0,0"
                                            Foreground="#FFE0AE8A" />
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!--Ban-Menu_btn-->
                    <Button
                        Height="58"
                        Command="{Binding LoadMenuPage}" 
                        CommandParameter="{Binding ElementName=MainFrame}">
                        <Button.Template>
                            <ControlTemplate 
                                TargetType="Button">
                                <Border 
                                    Height="58" 
                                    CornerRadius="16">
                                    <StackPanel 
                                        Cursor="Hand" 
                                        Orientation="Horizontal">
                                        <Image 
                                            Source="/QuanLiCoffeeShop;component/Resources/Icon/Ban_Brown_Icon.png"
                                            Width="27"
                                            Margin="24 0 0 0" />
                                        <TextBlock 
                                            Text="Bàn"
                                            FontSize="18"
                                            VerticalAlignment="Center"
                                            Margin="13,0,0,0"
                                            Foreground="#FFE0AE8A" />
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!--KhachHang-Menu_btn-->
                    <Button
                        Height="58"
                        Command="{Binding LoadKhachHangPage}" 
                        CommandParameter="{Binding ElementName=MainFrame}">
                        <Button.Template>
                            <ControlTemplate 
                                TargetType="Button">
                                <Border 
                                    Height="58" 
                                    CornerRadius="16">
                                    <StackPanel 
                                        Cursor="Hand" 
                                        Orientation="Horizontal">
                                        <Image 
                                            Source="/QuanLiCoffeeShop;component/Resources/Icon/KhachHang_Brown_Icon.png"
                                            Width="27"
                                            Margin="24 0 0 0" />
                                        <TextBlock 
                                            Text="Khách hàng"
                                            FontSize="18"
                                            VerticalAlignment="Center"
                                            Margin="13,0,0,0"
                                            Foreground="#FFE0AE8A" />
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!--ThongKe-Menu_btn-->
                    <Button
                        Height="58"
                        Command="{Binding LoadThongKePage}" 
                        CommandParameter="{Binding ElementName=MainFrame}">
                        <Button.Template>
                            <ControlTemplate 
                                TargetType="Button">
                                <Border 
                                    Height="58" 
                                    CornerRadius="16">
                                    <StackPanel 
                                        Cursor="Hand" 
                                        Orientation="Horizontal">
                                        <Image 
                                            Source="/QuanLiCoffeeShop;component/Resources/Icon/ThongKe_Brown_Icon.png"
                                            Width="27"
                                            Margin="24 0 0 0" />
                                        <TextBlock 
                                            Text="Thống kê"
                                            FontSize="18"
                                            VerticalAlignment="Center"
                                            Margin="13,0,0,0"
                                            Foreground="#FFE0AE8A" />
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!--TaiKhoan-Menu_btn-->
                    <Button
                        Height="58"
                        Command="{Binding LoadNhanVienPage}" 
                        CommandParameter="{Binding ElementName=MainFrame}">
                        <Button.Template>
                            <ControlTemplate 
                                TargetType="Button">
                                <Border 
                                    Height="58" 
                                    CornerRadius="16">
                                    <StackPanel 
                                        Cursor="Hand" 
                                        Orientation="Horizontal">
                                        <Image 
                                            Source="/QuanLiCoffeeShop;component/Resources/Icon/TaiKhoan_Brown_Icon.png"
                                            Width="27"
                                            Margin="24 0 0 0" />
                                        <TextBlock 
                                            Text="Tài khoản"
                                            FontSize="18"
                                            VerticalAlignment="Center"
                                            Margin="13,0,0,0"
                                            Foreground="#FFE0AE8A" />
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>
            </Grid>
        </Grid>
    </Grid>


</Window>
