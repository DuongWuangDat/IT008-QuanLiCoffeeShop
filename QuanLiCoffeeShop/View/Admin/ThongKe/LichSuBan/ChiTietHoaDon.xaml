<Window x:Class="QuanLiCoffeeShop.View.Admin.ThongKe.LichSuBan.ChiTietHoaDon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLiCoffeeShop.View.Admin.ThongKe.LichSuBan"
        xmlns:converters="clr-namespace:QuanLiCoffeeShop.Converter"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="ChiTietHoaDon" Height="691" Width="723"
        x:Name="BillInfoWd"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        DataContext="{StaticResource ThongKeVM}"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="Transparent"
        FontFamily="{DynamicResource MaterialDesignFont}">
    
    <Window.Resources>
        <Style x:Key="TextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="19.2"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <converters:PriceConverter x:Key="PriceConverter"></converters:PriceConverter>
    </Window.Resources>
    <Grid>
        <Border Background="White" CornerRadius="32" Margin="0,0,0,-13">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="71"/>
                    <RowDefinition Height="127"/>
                    <RowDefinition Height="326"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock 
                        Text="Chi tiết hóa đơn" 
                        FontSize="28.8" 
                        FontWeight="Bold" 
                        Foreground="#CC824D" 
                        FontFamily="Inter"
                        VerticalAlignment="Top"
                        Margin="50,28,0,0" Height="35"/>

                <Grid Grid.Row="1">
                    <StackPanel
                            Orientation="Horizontal"
                        VerticalAlignment="Top">
                        <StackPanel
                             Margin="0 0 90 0">
                            <TextBlock Style="{DynamicResource TextBlock}" 
                                    Text="Tên khách hàng" 
                                    Margin="50 27 0 10" 
                                    Height="23" 
                                    VerticalAlignment="Top"/>
                            <TextBox 
                                    Text="{Binding CusName}"
                                    Width="231.6" 
                                    Height="50" 
                                    BorderThickness="0.5" 
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="24" 
                                    VerticalContentAlignment="Center"
                                    Padding="12,2.4"
                                    HorizontalAlignment="Left"             
                                    Background="#D9D9D9"
                                    FontFamily="Inter" 
                                    FontSize="16" 
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    Margin="50,0,0,0"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Style="{DynamicResource TextBlock}" 
                                    Text="Nhân viên bán" 
                                    Margin="50 27 0 10" 
                                    Height="23" 
                                    VerticalAlignment="Top"/>
                            <TextBox 
                                Text="{Binding StaffName}"
                                    Width="231.6" 
                                    Height="50" 
                                    BorderThickness="0.5" 
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="24" 
                                    VerticalContentAlignment="Center"
                                    Padding="12,2.4"
                                    HorizontalAlignment="Left"             
                                    Background="#D9D9D9"
                                    FontFamily="Inter" 
                                    FontSize="16" 
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    Margin="50,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="2">
                    <Border
                        Margin="0 10 20 0"
                        Background="#E6B89F"
                        Opacity="0.58" 
                        Width="625.6"
                        Height="312"
                        VerticalAlignment="Top"
                        CornerRadius="25">
                        <Border 
                            Background="White" 
                            Margin="12" 
                            CornerRadius="25">
                            <ListView                                
                                ItemsSource="{Binding ProductList}">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem"
                                        BasedOn="{StaticResource MaterialDesignGridViewItem}">
                                    </Style>
                                </ListView.ItemContainerStyle>

                                <ListView.View>
                                    <GridView>

                                        <GridViewColumn Header="ID"  Width="60">
                                            <GridViewColumn.HeaderContainerStyle>
                                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                </Style>
                                            </GridViewColumn.HeaderContainerStyle>
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding ID}"
                                                        FontSize="18" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="Tên sản phẩm" Width="173">
                                            <GridViewColumn.HeaderContainerStyle>
                                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                    <Setter Property="Height" Value="47"/>
                                                </Style>
                                            </GridViewColumn.HeaderContainerStyle>
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding DisplayName}"
                                   FontSize="18" 
                                   Margin="31,0,0,0"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="Số lượng" Width="80" >
                                            <GridViewColumn.HeaderContainerStyle>
                                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                    <Setter Property="Height" Value="47"/>
                                                </Style>
                                            </GridViewColumn.HeaderContainerStyle>
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding SoLuong}"
                                                        FontSize="18"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>

                                        </GridViewColumn>

                                        <GridViewColumn Header="Đơn giá" Width="130">
                                            <GridViewColumn.HeaderContainerStyle>
                                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                    <Setter Property="Height" Value="47"/>
                                                </Style>
                                            </GridViewColumn.HeaderContainerStyle>
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Price, Converter={StaticResource PriceConverter}}"
                                                        FontSize="18" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>

                                        </GridViewColumn>

                                        <GridViewColumn Header="Thành tiền (VND)" Width="160">
                                            <GridViewColumn.HeaderContainerStyle>
                                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                    <Setter Property="Height" Value="47"/>
                                                </Style>
                                            </GridViewColumn.HeaderContainerStyle>
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding ThanhTien, Converter={StaticResource PriceConverter}}"
                                                        FontSize="18" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>

                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>

                        </Border>

                    </Border>
                </Grid>

                <Grid Grid.Row="3">
                    <StackPanel
                        Orientation="Horizontal">
                        <TextBlock Style="{DynamicResource TextBlock}" 
                            Text="Thời gian:" 
                            Height="23" 
                            VerticalAlignment="Top"
                            Margin="50 0 15 0 "/>
                        <TextBlock Style="{DynamicResource TextBlock}" 
                            Text="{Binding BillDate}" 
                            Height="23" 
                            VerticalAlignment="Top"/>
                        <TextBlock Style="{DynamicResource TextBlock}" 
                            Text="Tổng:" 
                            Height="23" 
                            VerticalAlignment="Top"
                            Margin="305 0 15 0 "/>
                        <TextBlock Style="{DynamicResource TextBlock}" 
                            Text="{Binding BillValue,  Converter={StaticResource PriceConverter}}" 
                            Height="23" 
                            MaxWidth="120"
                                   Margin="0 0 5 0"
                            VerticalAlignment="Top"/>
                        <TextBlock Style="{DynamicResource TextBlock}" 
                            Text="đ"
                            Height="23"                             
                            VerticalAlignment="Top"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="4">
                    <Button
                        Command="{Binding CloseWdCM}"
                        CommandParameter="{Binding ElementName=BillInfoWd}"
                        Width="120"
                        Height="62"
                        materialDesign:ButtonAssist.CornerRadius="24"
                        Background="#F0BD70"
                        BorderThickness="0"
                        Content="Đóng"
                        FontSize="24"
                        FontWeight="Bold" Margin="503,44,93,44"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
