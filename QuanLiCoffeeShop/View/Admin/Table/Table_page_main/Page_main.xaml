                        Width="380"
                        Background="White"
                        CornerRadius="20"
                        BorderBrush="#E0AE8A"
                        BorderThickness="1">
                    <StackPanel>

                        <TextBlock FontSize="29"
                                   Margin="0,16,0,0"
                                   HorizontalAlignment="Center"
                                   Text="Thêm bàn"
                                   Foreground="#CC824D"
                                   FontWeight="Bold"></TextBlock>

                        <TextBlock Text="Tên bàn"
                                   FontWeight="Bold"
                                   Margin="40,20,0,10"
                                   FontSize="19"></TextBlock>

