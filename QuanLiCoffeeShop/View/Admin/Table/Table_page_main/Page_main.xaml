                                 Width="300"
                                 BorderThickness="1.5"
                                 BorderBrush="#FFE0AE8A"
                                 CornerRadius="16"
                                 Background="#FFF4F4">

                            <ComboBox BorderThickness="0"
                                      FocusVisualStyle="{x:Null}"
                                      Width="260"
                                      Height="30"
                                      Text="{Binding Status}">

                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="Background"
                                                Value="#FFF4F4" />
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                                <TextBlock Text="Còn trống"
                                           FontSize="18"></TextBlock>
                                <TextBlock   Text="Đã đặt"
                                             FontSize="18"></TextBlock>
                                <TextBlock Text="Đang sửa chữa"
                                           FontSize="18"></TextBlock>

                            </ComboBox>

                        </Border>
                        <Grid Margin="0,30,0,0">
                            <Button Height="48"
                                    Width="97"
                                    HorizontalAlignment="Left"
                                    Margin="45,0,0,0"
                                    Command="{Binding Edit}">
                                <Button.Template>
                                    <ControlTemplate>
                                        <Border      CornerRadius="24"
                                                     Background="#F0BD70">
                                            <TextBlock   Text="Thêm"
                                                         FontWeight="Bold"
                                                         FontSize="20"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Center"
                                                         Foreground="White" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button Height="48"
                                    Width="97"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,45,0"
                                    Command="{Binding Clos}">
                                <Button.Template>
                                    <ControlTemplate>
                                        <Border      CornerRadius="24"
                                                     Background="#FFC3BDB9">
                                            <TextBlock   Text="Đóng"
