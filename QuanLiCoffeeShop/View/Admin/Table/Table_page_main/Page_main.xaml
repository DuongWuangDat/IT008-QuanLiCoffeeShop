                                </TextBox>
                        </StackPanel>
                    </Border>-->
                    <!--Phanloai-->
                    <Border  Height="54"
                             Margin="0,15,0,0"
                             
                             BorderThickness="1.5"
                             BorderBrush="#FFE0AE8A"
                             CornerRadius="16"
                             Background="#FFF4F4">
                        <ComboBox BorderThickness="0"
                                  FocusVisualStyle="{x:Null}"
                                  Width="150"
                                  Height="30"
                                  Text="{Binding Status}"
                                  HorizontalAlignment="Center">

                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Background"
                                            Value="#FFF4F4" />
                                </Style>
                            </ComboBox.ItemContainerStyle>
                            <TextBlock Text="Tất cả loại bàn" 
                                       FontSize="18" Margin="10,0,0,0"></TextBlock
>
                            <TextBlock   Text="Bàn 1"
                                         FontSize="18"
                                         Margin="10,0,0,0"></TextBlock>
                            <TextBlock   Text="Bàn 2"
                                         FontSize="18"
                                         Margin="10,0,0,0"></TextBlock>
                            <TextBlock   Text="Bàn 4"
                                         FontSize="18"
                                         Margin="10,0,0,0"></TextBlock>
                            <TextBlock   Text="Bàn 6"
                                         FontSize="18"
                                         Margin="10,0,0,0"></TextBlock>

                        </ComboBox>
                    </Border>


                    <!--All_table-->
                    <Button Height="54"
                            Margin="0,20,0,0"
                            Width="180">
                        

                        <Button.Template>
                            <ControlTemplate>
                                <Border  CornerRadius="16"
                                         Background="#FFF4F4">
                                    <TextBlock   Text="Tất cả"
                                               
                                                 FontSize="18"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                 Margin="40,0,0,0"
                                                 Foreground="#FFE0AE8A" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <!--empty_table-->
                    <Button Height="54"
                            Margin="0,0,0,0"
                            Width="180">
                        <Button.Template>
                            <ControlTemplate>
                                <Border  CornerRadius="16"
                                         Background="White">
                                    <TextBlock   Text="Còn trống"
                                                 FontSize="18"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                 Margin="40,0,0,0"
                                                 Foreground="#FFE0AE8A" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!--booked_table-->
                    <Button Height="54"
                            Margin="0,0,0,0"
                            Width="180">
                        <Button.Template>
                            <ControlTemplate>
                                <Border  CornerRadius="16"
                                         Background="White">
                                    <TextBlock   Text="Đã đặt"
                                                 FontSize="18"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                 Margin="40,0,0,0"
                                                 Foreground="#FFE0AE8A" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <!--Repair_table-->
                    <Button Height="54"
                            Margin="0,0,0,0"
                            Width="180">
                        <Button.Template>
                            <ControlTemplate>
                                <Border  CornerRadius="16"
                                         Background="White">
                                    <TextBlock   Text="Đang sửa chữa"
                                                 FontSize="18"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                 Margin="40,0,0,0"
                                                 Foreground="#FFE0AE8A" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                   

                </StackPanel>
            </Border>
        </Grid>
        <Grid Grid.Column="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListView x:Name="list_table"
                          Width="1250"
                          Height="750"
                          ItemsSource="{Binding ListTable}"
                          SelectedItem="{Binding SelectedItem}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="6" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>


                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Border Margin="0,10,20,10"
                                        Height="216"
                                        Width="164"
                                        BorderThickness="1.5"
                                        BorderBrush="#E0AE8A"
                                        CornerRadius="15">
                                    <StackPanel>
                                        <Button Width="120"
                                                Height="120"
                                                Margin="0,5,0,0"
                                                Command="{Binding Datacontext.OpenInfo, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                                CommandParameter="{Binding}">
                                            <Button.Template>
                                                <ControlTemplate>
                                                    <Image Width="90.4"
                                                           Height="92"
                                                           Source="/QuanLiCoffeeShop;component/Resources/Image/table.png"></Image>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>

                                        <TextBlock Text="{Binding Name}"
                                                   HorizontalAlignment="Center"
                                                   FontSize="16"></TextBlock>
                                        <TextBlock Text="{Binding Status}"
                                                   HorizontalAlignment="Center"
                                                   FontSize="8.8"
                                                   Foreground="#FF3DFF3D"></TextBlock>
                                        <Grid Margin="0,10,0,0">
                                            <!--button_repair_table-->
                                            <Button Margin="55,0,83,0"
                                                    Height="23"
                                                    Width="23"
                                                    Background="White"
                                                    Command="{Binding Datacontext.OpenEdit, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                                    CommandParameter="{Binding}">
                                                <Button.Template>
                                                    <ControlTemplate>
                                                        <Border CornerRadius="100"
                                                                Background="White"
                                                                Height="23"
                                                                Width="23">
                                                            <Image Source="/QuanLiCoffeeShop;component/Resources/Icon/ChangeBrown_Icon.png"></Image>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                                <!--button_deltete-->

                                            </Button>
                                            <Button Height="23"
                                                    Width="23"
                                                    Background="White"
                                                    Margin="83,0,55,0"
                                                    VerticalAlignment="Center"
                                                    Command="{Binding Datacontext.OpenDelete, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                                    CommandParameter="{Binding}">
                                                <Button.Template>
                                                    <ControlTemplate>
                                                        <Border CornerRadius="100"
                                                                Background="White"
                                                                Height="23"
                                                                Width="23">
                                                            <Image Source="/QuanLiCoffeeShop;component/Resources/Icon/DeleteBlue_Icon.png"></Image>
                                                        </Border>

                                                    </ControlTemplate>
                                                </Button.Template>

                                            </Button>

                                        </Grid>

                                    </StackPanel>
                                </Border>
                               

                            </Grid>

                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
            <!--khi nhấn vào hình cái bàn cửa sổ sẽ hiển thị thông tin bàn-->
            <Popup  Placement="Center"
                    x:Name="infoPopup"
                    IsOpen="{Binding IsPopupOpenInfo}"
                    AllowsTransparency="True"
                    PopupAnimation="Fade">
                <Border Height="300"
                        Width="400"
                        Background="White"
                        CornerRadius="20"
                        BorderBrush="#E0AE8A"
                        BorderThickness="3">
                    <StackPanel>

                        <TextBlock HorizontalAlignment="Center"
                                   Text="Thông tin bàn"
                                   FontSize="23"
                                   Margin="0,10,0,0"
                                   Foreground="#CC824D"
                                   FontWeight="Bold"></TextBlock>
                        <Grid Margin="0,25,0,0">
                            <TextBlock Text="Tên bàn"
                                       FontWeight="Bold"
                                       Margin="25,0,0,0"></TextBlock>
                            <TextBlock Text="Loại bàn"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Left"
                                       Margin="242,0,0,0" />
                        </Grid>
                        <Grid Margin="0,10,0,0">
                            <Border Margin="20,0,0,0"
                                    Height="34"
                                    Width="150"
                                    CornerRadius="16"
                                    Background="White"
                                    BorderBrush="#CC824D"
                                    BorderThickness="1"
                                    HorizontalAlignment="Left">
                                <!--tb_ten-->
                                <TextBlock Text="{Binding Name}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"></TextBlock>
                            </Border>
                            <Border Margin="0,0,15,0"
                                    Height="34"
                                    Width="150"
                                    CornerRadius="16"
                                    Background="White"
                                    BorderBrush="#CC824D"
                                    BorderThickness="1"
                                    HorizontalAlignment="Right">
                                <!--tb_khachhang-->
                                <TextBlock Text="{Binding GenreName}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"></TextBlock>
                            </Border>
                        </Grid>
                        <Grid Margin="0,25,0,0">
                            <TextBlock Text="Trạng Thái"
                                       FontWeight="Bold"
                                       Margin="25,0,0,0"></TextBlock>
                        </Grid>
                        <Grid Margin="0,10,0,0">
                            <Border Margin="20,0,0,0"
                                    Height="34"
                                    Width="150"
                                    CornerRadius="16"
                                    Background="White"
                                    BorderBrush="#CC824D"
                                    BorderThickness="1"
                                    HorizontalAlignment="Left">
                                <!--tb_trangthai-->
                                <TextBlock Text="{Binding Status}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"></TextBlock>
                            </Border>
                        </Grid>
                        <!--btn_close_info-->
                        <Button Height="38"
                                Width="65"
                                Margin="270,25,0,0"
                                Command="{Binding CloseInfo}">
                            <Button.Template>
                                <ControlTemplate>
                                    <Border      CornerRadius="16"
                                                 Background="#FFC3BDB9">

                                        <TextBlock   Text="Đóng"
                                                     FontWeight="Bold"
                                                     FontSize="18"
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Center"
                                                     Foreground="White" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>
            </Popup>
            <!--popup sửa bàn-->
            <Popup  Placement="Center"
                    x:Name="Popup"
                    IsOpen="{Binding IsPopupOpenEdit}"
                    AllowsTransparency="True"
                    PopupAnimation="Fade">
                <Border Height="480"
                        Width="380"
                        Background="White"
                        CornerRadius="20"
                        BorderBrush="#E0AE8A"
                        BorderThickness="1">
                    <StackPanel>

                        <TextBlock FontSize="29"
                                   Margin="0,16,0,0"
                                   HorizontalAlignment="Center"
                                   Text="Sửa bàn"
                                   Foreground="#CC824D"
                                   FontWeight="Bold"></TextBlock>

                        <TextBlock Text="Tên bàn"
                                   FontWeight="Bold"
                                   Margin="40,20,0,10"
                                   FontSize="19"></TextBlock>

                        <Border  Height="50"
                                 Width="300"
                                 BorderThickness="1.5"
                                 BorderBrush="#FFE0AE8A"
                                 CornerRadius="16"
                                 Background="#FFF4F4">

                            <TextBox  BorderBrush="Transparent"
                                      TextDecorations="None"
                                      Width="250"
                                      FontSize="18"
                                      VerticalAlignment="Center"
                                      Margin="13,0,0,0"
                                      Foreground="Black"
                                      Background="{x:Null}"
                                      Text="{Binding Name}" />

                        </Border>

                        <TextBlock Text="Loại bàn"
                                   FontWeight="Bold"
                                   Margin="40,20,0,10"
                                   FontSize="19"></TextBlock>

                        <Border  Height="50"
                                 Width="300"
                                 BorderThickness="1.5"
                                 BorderBrush="#FFE0AE8A"
                                 CornerRadius="16"
                                 Background="#FFF4F4">

                            <ComboBox BorderThickness="0"
                                      FocusVisualStyle="{x:Null}"
                                      Width="260"
                                      Height="30"
                                      Text="{Binding GenreName}">

                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="Background"
                                                Value="#FFF4F4" />
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                                <TextBlock   Text="Bàn 1"
                                             FontSize="18"></TextBlock>
                                <TextBlock   Text="Bàn 2"
                                             FontSize="18"></TextBlock>
                                <TextBlock   Text="Bàn 4"
                                             FontSize="18"></TextBlock>
                                <TextBlock   Text="Bàn 6"
                                             FontSize="18"></TextBlock>
                            </ComboBox>
                        </Border>

                        <TextBlock Text="Trạng thái"
                                   FontWeight="Bold"
                                   Margin="40,20,0,10"
                                   FontSize="19"></TextBlock>

                        <Border  Height="50"
                                 Width="300"
                                 BorderThickness="1.5"
                                 BorderBrush="#FFE0AE8A"
                                 CornerRadius="16"
                                 Background="#FFF4F4">

                            <ComboBox BorderThickness="0"
                                      FocusVisualStyle="{x:Null}"
                                      Width="260"
                                      Height="30"
                                      Text="{Binding Status}">

                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="Background"
                                                Value="#FFF4F4" />
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                                <TextBlock Text="Còn trống"
                                           FontSize="18"></TextBlock>
                                <TextBlock   Text="Đã đặt"
                                             FontSize="18"></TextBlock>
                                <TextBlock Text="Đang sửa chữa"
                                           FontSize="18"></TextBlock>

                            </ComboBox>

                        </Border>
                        <Grid Margin="0,30,0,0">
                            <Button Height="48"
                                    Width="97"
                                    HorizontalAlignment="Left"
                                    Margin="45,0,0,0"
                                    Command="{Binding Edit}">
                                <Button.Template>
                                    <ControlTemplate>
                                        <Border      CornerRadius="24"
                                                     Background="#F0BD70">
                                            <TextBlock   Text="Sửa"
                                                         FontWeight="Bold"
                                                         FontSize="20"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Center"
                                                         Foreground="White" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button Height="48"
                                    Width="97"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,45,0"
                                    Command="{Binding CloseEdit}">
                                <Button.Template>
                                    <ControlTemplate>
                                        <Border      CornerRadius="24"
                                                     Background="#FFC3BDB9">
                                            <TextBlock   Text="Đóng"
                                                         FontWeight="Bold"
                                                         FontSize="20"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Center"
                                                         Foreground="White" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
            </Popup>
            <!--popup xác nhận xóa -->
            <Popup  Placement="Center"
                    x:Name="confirmPopup"
                    IsOpen="{Binding IsPopupOpenDelete}"
                    AllowsTransparency="True"
                    PopupAnimation="Fade">
                <Border Width="438"
                        Height="196"
                        CornerRadius="25"
                        Background="White"
                        BorderBrush="#E0AE8A"
                        BorderThickness="2">
                    <StackPanel>
                        <TextBlock Margin="0,40,0,0"
                                   HorizontalAlignment="Center"
                                   Text="Bạn có chắc chắn muốn xóa bàn này không?"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#CC824D"></TextBlock>
                        <Grid Margin="0,40,0,0">
                            <Button Height="48"
                                    Width="97"
                                    HorizontalAlignment="Left"
                                    Margin="70,0,0,0"
                                    Command="{Binding Delete}">
                                <Button.Template>
                                    <ControlTemplate>
                                        <Border      CornerRadius="24"
                                                     Background="#F0BD70">
                                            <TextBlock   Text="Có"
                                                         FontWeight="Bold"
                                                         FontSize="20"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Center"
                                                         Foreground="White" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button Height="48"
                                    Width="97"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,70,0"
                                    Command="{Binding CloseDelete}">
                                <Button.Template>
                                    <ControlTemplate>
                                        <Border      CornerRadius="24"
                                                     Background="#EFD8B4">
                                            <TextBlock   Text="Không"
                                                         FontWeight="Bold"
                                                         FontSize="20"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Center"
                                                         Foreground="White" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
            </Popup>
            <!--popup thêm bàn-->
